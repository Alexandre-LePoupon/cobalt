 * Page par défaut de HPNativeBridge
 * copiez-collez ce qml comme base pour votre page
 * Important : l'id du HPNativeBridgeContainer doit être une propriété "nativeBridgeContainer"
 */
import bb.cascades 1.0

Page {
    id: mainPage
    
    property alias nativeBridgeContainer: nativeBridgeContainer
    
    content: HPNativeBridgeContainer {
        id: nativeBridgeContainer

        verticalAlignment: VerticalAlignment.Fill
        horizontalAlignment: HorizontalAlignment.Fill

        //example JS to native handler	
        onMessageSentByJavascript: {
            //handle your event here 
        }
    }
}

