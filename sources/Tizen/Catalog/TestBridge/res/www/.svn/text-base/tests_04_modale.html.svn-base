		<div id="nativeBridge_logdiv"></div>
		
        <script type="text/javascript" src="js/zepto.min.js"></script>
        <script type="text/javascript" src="js/nativeBridge/nativeBridge.js"></script>
        <script type="text/javascript" src="js/utils.storage.js"></script>
        <script type="text/javascript" src="js/functions.js"></script>
        <script>
            
            Zepto(function($){

	            nativeBridge.init({
		            debug:true,
		            //sendingToNative:false,
	            });

                utils.storage.enable();
				nativeBridge.log("init dismissInformations : "+utils.storage.getItem("dismissInformations"), false);
				nativeBridge.log("init testLocalStorageKey : "+utils.storage.getItem("testLocalStorageKey"), false);
				
				$('a').on('touchstart',function(){ 				$(this).addClass('tapped');   })
                $('a').on('touchend touchcancel',function(){  	$(this).removeClass('tapped');});

                $('a.pop').on('tap click',function(){
		        	nativeBridge.navigate('pop');
		            return false;
	            });
	            
	            $('a.modale').on('tap click',function(){
					nativeBridge.navigate('modale',$(this).attr('data-href'));
		            return false;
	            });
	            
	            

            })
            

        </script>
        
    </body>
